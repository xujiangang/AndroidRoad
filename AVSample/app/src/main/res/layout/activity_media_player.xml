<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/media_player_surface"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/media_player_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/media_player_surface" />

    <Button
        android:id="@+id/media_player_pause_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Pause"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@id/media_player_start_btn"
        app:layout_constraintTop_toTopOf="@id/media_player_start_btn" />

    <Button
        android:id="@+id/media_player_stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Stop"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@id/media_player_pause_btn"
        app:layout_constraintTop_toTopOf="@id/media_player_pause_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>